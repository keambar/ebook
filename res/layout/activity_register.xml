<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ebook.ActivityRegister" >

    <TextView
        android:id="@+id/TextView_YHZC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="用户注册" 
        android:textSize="30dp"/>

    <TextView
        android:id="@+id/TextView_ZH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TextView_YHZC"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="账号：" />

    <EditText
        android:id="@+id/EditView_ZH"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/TextView_ZH"
        android:layout_toRightOf="@id/TextView_ZH"
        android:gravity="center" />

    <TextView
        android:id="@+id/TextView_MM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TextView_ZH"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="密码：" />

    <EditText
        android:id="@+id/EditView_MM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/TextView_MM"
        android:layout_toRightOf="@id/TextView_MM"
        android:inputType="textPassword"
        android:gravity="center" >
    </EditText>

    <TextView
        android:id="@+id/TextView_QQ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TextView_MM"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="QQ  ：" />

    <EditText
        android:id="@+id/EditView_QQ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/TextView_QQ"
        android:layout_toRightOf="@id/TextView_QQ"
        android:gravity="center" >
    </EditText>

    <TextView
        android:id="@+id/TextView_WX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TextView_QQ"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="微信：" />
    
    <EditText
        android:id="@+id/EditView_WX"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/TextView_WX"
        android:layout_toRightOf="@id/TextView_WX"
        android:gravity="center" >
    </EditText>

    <Button
        android:id="@+id/ButtonZc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextView_WX"
        android:layout_toLeftOf="@+id/TextView_YHZC"
        android:text="注册" />
    
    <Button
        android:id="@+id/ButtonQx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextView_WX"
        android:layout_toRightOf="@+id/TextView_YHZC"
        android:text="取消" />

</RelativeLayout>